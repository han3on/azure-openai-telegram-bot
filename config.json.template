{
    "telegram": {
        "bot_token": "<YOUR_TELEGRAM_BOT_TOKEN_HERE>",
        "enable_inline_mode": true,
        "context_expiration_time": 600
    },
    "openai": {
        "api_type": "azure",
        "api_key": "<YOUR_AZURE_OPENAI_API_KEY_HERE>",
        "api_base": "<YOUR_AZURE_OPENAI_API_ENDPOINT_HERE>",
        "api_version": "2023-08-01-preview",
        "chat_model": "<YOUR_AZURE_OPENAI_DEPLOYMENT_NAME_HERE>",
        "chat_temperature": 0.2,
        "enable_custom_system_role": true,
        "default_system_role": "You are a helpful assistant",
        "api_timeout": 600
    },
    "user_management": {
        "allow_all_users": false,
        "allowed_users": [
            "<USER_ID_1>", 
            "<USER_ID_2>"
        ],
        "super_users": [
            "<SUPER_USER_ID_1>",
            "<SUPER_USER_ID_2>"
        ]
    },
    "image_generation": {
        "enable_dalle": false,
        "limit_per_day": 5
    },
    "voice_message": {
        "enable_voice": true,
        "tts_reply": true,
        "text_as_caption": false
    },
    "azure_speech": {
        "language": "en-GB",
        "voice": "en-GB-SoniaNeural",
        "subscription_key": "<YOUR_AZURE_TTS_SUBSCRIPTION_KEY_HERE>",
        "subscription_region": "<YOUR_AZURE_TTS_SUBSCRIPTION_REGION_HERE>"
    },
    "logging": {
        "log_level": "INFO",
        "log_format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
        "log_path": "./log/",
        "log_file_with_time": false
    }
}
